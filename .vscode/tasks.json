{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "V GCC Debug Build",
            "type": "shell",
            "command": "v",
            "args": [
                "-keepc",
                "-g",               // add more compiler options here if necessary
                // "-gc boehm",
                // "-m", 
                // "win32",
                "-cc",
                "gcc",
                //"-showcc",

                //"-cflags",
                //"-LD://Documents//_Projects//OpenCL-SDK-2022.4.1-win32//lib",
                //"-cflags",
                //"-ID://Documents//_Projects//OpenCL-SDK-2022.4.1-win32//include",
                //"-cflags",
                //"-WIN32_LEAN_AND_MEAN", 

                "${relativeFile}",            // Will compile the 'selected' file in vscode, or 
                //"${workspaceFolder}/main.v",  // Will always compiling main.v even if another file is 'selected' in vscode
                //"${workspaceFolder}/.",         // Will compile all .v file in the folder. However, the main file will be named as the 'foldername'.exe !
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                //"echo": true,
                //"focus": false,
                //"panel": "shared",
                //"showReuseMessage": true,
                //"clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "V TCC Debug Build",
            "type": "shell",
            "command": "v",
            "args": [
                "-g",
                "${relativeFile}"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "V TCC Build (No debug)",
            "type": "shell",
            "command": "v",
            "args": [
                "-prod",
                "${relativeFile}"
            ],
            "group": "build",
            "presentation": {
                //"echo": true,
                "reveal": "silent",
                //"focus": false,
                //"panel": "shared",
                //"showReuseMessage": true,
                //"clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },

        // ============ C/C++ Tasks =====================
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: C:\\mingw64\\bin\\g++.exe"
        }

    ]
}